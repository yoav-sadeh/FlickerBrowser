<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:padding="8dp" android:weightSum="3">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/place_holder" android:id="@+id/thumbnail"
            android:layout_weight="1" android:scaleType="fitStart" android:adjustViewBounds="false"
            android:contentDescription="@string/browse_image_description"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/title" android:layout_weight="2"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" tools:text="Empty TextView"/>
</LinearLayout>